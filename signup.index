<!DOCTYPE html>
<html lang="bn">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CK WIN - Sign Up</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body { margin: 0; font-family: 'Segoe UI', sans-serif; background-color: #f5f5f5; display: flex; justify-content: center; }
        .app-container { width: 100%; max-width: 450px; background: white; min-height: 100vh; position: relative; }
        
        /* Header Section */
        .header { background: linear-gradient(180deg, #ffcc00 0%, #ffb300 100%); padding: 30px 20px; color: white; border-radius: 0 0 25px 25px; }
        .header h1 { margin: 0; font-size: 28px; font-style: italic; font-weight: 900; }
        .header p { font-size: 13px; margin: 10px 0 0; opacity: 0.9; line-height: 1.4; }

        /* Form Section */
        .form-box { padding: 20px; margin-top: -10px; }
        .tab-menu { display: flex; border-bottom: 2px solid #eee; margin-bottom: 20px; }
        .tab { flex: 1; text-align: center; padding: 10px; color: #666; font-weight: bold; cursor: pointer; border-bottom: 2px solid transparent; }
        .tab.active { color: #ffb300; border-bottom: 2px solid #ffb300; }

        .input-group { margin-bottom: 20px; }
        .label { display: block; margin-bottom: 8px; font-weight: bold; color: #444; font-size: 14px; }
        .input-field { display: flex; align-items: center; background: #f9f9f9; border: 1px solid #ddd; border-radius: 12px; padding: 12px; }
        .input-field i { color: #ffb300; margin-right: 10px; }
        input { border: none; background: transparent; width: 100%; outline: none; font-size: 16px; }

        /* Buttons */
        .btn-login { width: 100%; padding: 15px; border-radius: 30px; border: none; font-size: 18px; font-weight: bold; cursor: pointer; margin-top: 10px; }
        .yellow-btn { background: linear-gradient(90deg, #ffcc00, #ffb300); color: white; margin-bottom: 15px; box-shadow: 0 4px 15px rgba(255,179,0,0.3); }
        .white-btn { background: white; color: #ffb300; border: 2px solid #ffb300; }
    </style>
</head>
<body>

<div class="app-container">
    <div class="header">
        <h1>CK WIN</h1>
        <p>Please register with your phone number.<br>If you have any issues, contact customer service.</p>
    </div>

    <div class="form-box">
        <div class="tab-menu">
            <div class="tab active">Phone Number</div>
            <div class="tab">Email</div>
        </div>

        <div class="input-group">
            <span class="label">Phone number</span>
            <div class="input-field">
                <i class="fas fa-mobile-alt"></i>
                <span style="margin-right:10px; color:#666; font-weight:bold;">+880</span>
                <input type="number" id="phone" placeholder="1804589591">
            </div>
        </div>

        <div class="input-group">
            <span class="label">Set Password</span>
            <div class="input-field">
                <i class="fas fa-lock"></i>
                <input type="password" id="pass" placeholder="Password">
                <i class="fas fa-eye-slash" style="color:#ccc; margin-left:10px;"></i>
            </div>
        </div>

        <button class="btn-login yellow-btn" onclick="register()">Register</button>
        <button class="btn-login white-btn" onclick="location.href='login.html'">Log in</button>
    </div>
</div>

<script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
    import { getDatabase, ref, set } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-database.js";

    // আপনার সেই Firebase Config এখানে বসান
    const firebaseConfig = {
        apiKey: "AIzaSyAvmMKF0SlY81K20YmHW SVF79s5YlRfkLw",
        authDomain: "ck-win-36ca8.firebaseapp.com",
        projectId: "ck-win-36ca8",
        databaseURL: "https://ck-win-36ca8-default-rtdb.firebaseio.com"
    };

    const app = initializeApp(firebaseConfig);
    const db = getDatabase(app);

    window.register = function() {
        const phone = document.getElementById('phone').value;
        const pass = document.getElementById('pass').value;

        if(phone && pass) {
            set(ref(db, 'users/' + phone), {
                password: pass,
                balance: 0.00
            }).then(() => {
                alert("Registration Successful!");
                window.location.href = "login.html";
            });
        } else { alert("Please enter phone and password!"); }
    }
</script>
</body>
</html>
